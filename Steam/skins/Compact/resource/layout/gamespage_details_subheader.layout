"resource/layout/gamespage_details_subheader.layout"
{
	controls
	{
		launchbutton { controlname="Button" labeltext="#Steam_LaunchGame" style="detailsLaunchButton" tabposition=1 command="RunGameAction" }
		subheaderlabels { controlname="CDetailsSubHeaderLabelsPanel" }
		clientlist { controlname="ClientListButton" labeltext="" style="ClientListButton" tabposition=2 zpos=100 }
	}

	colors
	{
		GameDetailsSubHeader.HorizontalSpacing=15
		GameDetailsSubHeader.VerticalMargin=0
	}

	styles
	{
		CDetailsGameSubHeaderPanel
		{
			render_bg
			{     
			0="fill( x0+1, y0  , x1-1, y1-1, FrameBG2 )"
			1="image(x0+1, y0  , x0+262, y0+47, graphics/libdet_corner_2 )"

                
			2="fill( x0  , y0  , x0+1, y1, ExBorderLowLight )"  // left
			3="fill( x0+1, y1-1, x1  , y1, ExBorderLowLight )"  // bottom
			4="fill( x1-1, y0  , x1  , y1, ExBorderLowLight )"  // right
			}
		}
		ClientListButton
		{
			inset="-6 0 0 0"
			// minimum-width=20
			// minimum-height set by code to match actual height of Launch button
			// Do not set either minimum-width or -height here or it will override the code and the layout will break
			bgcolor=none
			render_bg
			{
				0="gradient( x0+1, y0+2, x1-1, y1-1, Btnlight, Btndarker )"
                
				1="fill( x0  , y0  , x1  . y0+1, Btnborder1 )"  // top
				3="fill( x0  , y0+1, x0+1, y1  , Btnborder1 )"  // left
				2="fill( x0+1, y1-1, x1  , y1  , Btnborder2 )"  // bottom
				4="fill( x1-1, y0+1, x1  , y1  , Btnborder2 )"  // right
			}
		}
		
		ClientListButton:hover
		{
			inset="-6 0 0 0"
			bgcolor=none
			render_bg
			{
				0="gradient( x0+1, y0+2, x1-1, y1-1, Btnlighthover, Btndarkhover )"
                
