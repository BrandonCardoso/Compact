			inset="-3 -1 0 0"
			font-family=basefont
			font-size=13
			font-weight=400
			textcolor="TextHover"
			font-style=regular
			bgcolor=none
			render_bg
			{
				0="gradient( x0+1, y0+2, x1-1, y1-1, Btnlighthover, Btndarkhover )"
					
				1="fill( x0  , y0   , x1  , y0+1, Btnborder3 )"  // top
				3="fill( x0  , y0+ 1, x0+1, y1  , Btnborder3 )"  // left
				2="fill( x0+1, y1- 1, x1  , y1  , Btnborder1 )"  // bottom
				4="fill( x1-1, y0+ 1, x1  , y1  , Btnborder1 )"  // right
