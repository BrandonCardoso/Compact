"resource/layout/gamespage_grid_chrome.layout"
{
	controls
	{
		"chromeborder"
		{
			ControlName					Panel
			style						ChromeBorderItem
			mouseinputenabled			0
		}
		
		
		"launch"
		{
			zpos="1"
			// this control's text and command will be clobbered by code based on the installation state
			ControlName					URLLabel
			labelText					"#steam_launch"
			style						CUILaunchButton
			command						launch
		}
		
				
		"divider"
		{
			zpos="1"
			ControlName					Label
			labelText					"|"
			style						GridNavDivider

		}
		
		"details"
		{
			zpos="1"
			ControlName					URLLabel
			labelText					"#steam_details"
			style						CUIDetailsButton
			command						details
		}
	}

	styles
	{
		ChromeBorderItem
		{
			render_bg
			{
				0="gradient	( x0  , y0   , x1, y0+7 , none, black )"		
				1="fill		( x0  , y0+7 , x1, y0+39, black )"		
				2="gradient	( x0  , y0+39, x1, y1+2 , black, none )"		
			}

		}	


		GridNavDivider
		{
			textcolor="Text"
			bgcolor="none"
			font-family=basefont
			font-weight=700
			inset="1 1 0 0 "
			font-size=15	
		}
		
		CUILaunchButton
		{   
			font-family=basefont
			font-size=16
			font-weight=400
			textcolor="Text"
			font-style=normal
			bgcolor=none   
			padding-left=35
      
				render
				{
					1="image( x0 + 7, y0 + 2, x1, y1, graphics/icon_play )"
				}
      
				render_bg
				{
					// bgfill
					2="gradient( x0 , y0, x1, y1, Btnlight, Btndark )"		

					// lines around
					3="fill( x0    , y0    , x1    , y0 + 1, BtnBorder1 )"	// top
					6="fill( x0    , y0 + 1, x0 + 1, y1    , BtnBorder1 )"	//left
					4="fill( x0    , y1 - 1, x1    , y1    , Btnborder2 )"	// bottom
					5="fill( x1 - 1, y0 + 1, x1    , y1 - 1, BtnBorder2 )"	//right
				}
		}
		
		
		CUILaunchButton:Hover
		{   
			font-family=basefont
			font-size=16
			font-weight=400
			textcolor="white"
			font-style=normal
			padding-left=35
			bgcolor=none   
      
			render
			{
				1="image( x0 + 7, y0 + 2, x1, y1, graphics/icon_play_hover )"
			} 				
			
			render_bg
			{
				// bgfill
				2="gradient( x0 + 1 , y0 + 1, x1 - 1, y1 - 1, Btnlighthover, Btndarkhover )"		
				
				// lines around
				3="fill( x0    , y0    , x1    , y0 + 1, BtnBorder3 )"	// top
				6="fill( x0    , y0 + 1, x0 + 1, y1    , BtnBorder3 )"	//left
				4="fill( x0    , y1 - 1, x1    , y1    , Btnborder1 )"	// bottom
				5="fill( x1 - 1, y0 + 1, x1    , y1 - 1, BtnBorder1 )"	//right
			}
		}
	
		CUIDetailsButton
		{   
			font-family=basefont
			font-size=16
			font-weight=400
			textcolor="Text"
			font-style=normal
			bgcolor=none   
			padding-left=35
      
			render
			{
				1="image( x0 + 7, y0 + 2, x1, y1, graphics/icon_details )"
			}
      
			render_bg
			{
				// bgfill
				2="gradient( x0 , y0, x1, y1, Btnlight, Btndark )"		
					// lines around
				3="fill( x0    , y0    , x1    , y0 + 1, BtnBorder1 )"	// top
				6="fill( x0    , y0 + 1, x0 + 1, y1    , BtnBorder1 )"	//left
				4="fill( x0    , y1 - 1, x1    , y1    , Btnborder2 )"	// bottom
				5="fill( x1 - 1, y0 + 1, x1    , y1 - 1, BtnBorder2 )"	//right
			}
		}
		
		CUIDetailsButton:Hover
		{   


			font-family=basefont
			font-size=16
			font-weight=400
			textcolor="white"
			font-style=normal
			bgcolor=none   
      
			render
			{
				1="image( x0 + 7, y0 + 2, x1, y1, graphics/icon_details_hover )"
			}
			
			
			render_bg
			{
				// bgfill
				2="gradient( x0 + 1 , y0 + 1, x1 - 1, y1 - 1, Btnlighthover, Btndarkhover )"		
				
				// lines around
				3="fill( x0    , y0    , x1    , y0 + 1, BtnBorder3 )"	// top
				6="fill( x0    , y0 + 1, x0 + 1, y1    , BtnBorder3 )"	//left
				4="fill( x0    , y1 - 1, x1    , y1    , Btnborder1 )"	// bottom
				5="fill( x1 - 1, y0 + 1, x1    , y1 - 1, BtnBorder1 )"	//right
			}
		}
	

		"GameItem_Updating CUINavButton:hover"
		{
			textcolor="Text"
		}
	}

	
	layout
	{
		region { name="actions" align=bottom width=max height=78 margin-botttom=28 }
		
		place { control=chromeborder region=actions x=0 y=0 width=max height=max margin-right=3 }

		place { control="launch"	region="actions"		align=top-center width=96 height=20 margin-bottom=13 margin-right=100 margin-top=13 }
		place { control="details"	region="actions"		align=top-center width=96 height=20 margin-bottom=13 margin-left=100 margin-top=13 }

		place { control="divider"	region="actions" height=0 }
	}
}