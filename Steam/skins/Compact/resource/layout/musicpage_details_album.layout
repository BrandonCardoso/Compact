"resource/layout/musicpage_details_album.layout"
{
	controls
	{
		AlbumTitleLabel { controlname="Label" style="AlbumTitleStyle" }
		ArtistLabel { controlname="Label" style="ArtistStyle" }
		CoverImage { controlname="ImagePanel" style="CoverStyle" scaling=fit}
		
		PlayTracksButton
		{ 
			controlname="Button" 
			labeltext="#Music_Album_Details_PlayTracks" 
			style="ActionButtonStyle"
			command="AlbumPlayTracksAction"
		}
		
		PlayTracksNextButton
		{
			controlname="Button" 
			labelText="#Music_Album_Details_PlayTracksNext" 
			style="AdditionalActionButtonStyle"
			command="AlbumPlayTracksNextAction"
		}
		
		AddTracksToQueueButton
		{
			controlname="Button" 
			labelText="#Music_Album_Details_AddTracksToQueue" 
			style="AdditionalActionButtonStyle"
			command="AlbumAddTracksToQueueAction"
		}	

		ShowAlbumButton
		{ 
			controlname="Button" 
			labeltext="#Music_Album_Details_ShowAlbum" 
			style="AdditionalActionButtonStyle"
			command="AlbumShowAction"
		}
		
		PlayAlbumButton
		{ 
			controlname="Button" 
			labeltext="#Music_Album_Details_Play" 
			style="ActionButtonStyle"
			command="AlbumPlayAction"
		}
		
		PlayAlbumNextButton
		{
			controlname="Button" 
			labelText="#Music_Album_Details_PlayNext" 
			style="AdditionalActionButtonStyle"
			command="AlbumPlayNextAction"
		}
		
		AddAlbumToQueueButton
		{
			controlname="Button" 
			labelText="#Music_Album_Details_AddToQueue" 
			style="AdditionalActionButtonStyle"
			command="AlbumAddToQueueAction"
		}	
		
		ShowAlbumInSystemButton
		{
			controlname="Button" 
			labelText="#Music_Album_Details_ShowAlbumInSystem" 
			style="AdditionalActionButtonStyle"
			command="AlbumShowAlbumInSystemAction"
		}	
		
		
	}

	styles
	{
		CMusicPage_Details_Album
		{
			bgcolor=none
			render {}
			render_bg {}
		}
		
		AlbumTitleStyle					//actually the artist title
		{
			padding-bottom=4
			padding-top=4
			padding-left=2
			padding-right=2
			font-size=24
			textcolor=Text
			font-family=basefontheader
			font-weight=400 
			bgcolor=BackgroundStart
		}

		ArtistStyle						//actually the album title
		{
			padding-bottom=7
			padding-top=13
			padding-left=6
			padding-right=6
			font-size=15
			textcolor=Text
			font-family=basefonthead
			font-weight=400 
			bgcolor=none
		}
		
		TrackStyle
		{
			padding-bottom=3
			padding-top=0
			font-size=13
			textcolor=Text2
			font-family=basefont
			font-weight=400 
			bgcolor=none
		}
		
		TrackStyle:hover
		{
			textcolor="text"
		}
		
		CoverStyle
		{}
		
		AdditionalActionButtonStyle
		{
			font-size=13
			font-size=13 [$OSX]
			font-family=basefont
			textcolor="label"
			padding-right=0
			padding-left=-6
			padding-top=0
			padding-bottom=-4
			render_bg	{}
		}
		
		AdditionalActionButtonStyle:hover
		{
			textcolor="texthover"
		}
		
		ActionButtonStyle
		{   
			inset="13 0 0 0"

			font-family=basefont
			font-size=13
			font-weight=400
			textcolor="Text"
			bgcolor=none

			render
			{
				1="image( x0  , y0+3, x1, y1, graphics/icon_play )"
			}
			render_bg
			{
				0="gradient( x0 + 1, y0+1, x1-1, y1-1, Btnlight, Btndark )"
				1="fill( x0    , y0    , x1, y0 + 1, BtnBorder1 )"	//t
				2="fill( x0    , y0 + 1, x0 + 1, y1, BtnBorder1 )"	//l
				3="fill( x0 + 1, y1 - 1, x1, y1    , BtnBorder2 )"	//b
				4="fill( x1 - 1, y0 + 1, x1    , y1, BtnBorder2 )"	//r
			}	
		}
			
		ActionButtonStyle:hover
		{
			textcolor="texthover"
			render
			{
				0="image( x0  , y0+3, x1, y1, graphics/icon_play_hover )"
			}				
			
			render_bg
			{				
				0="gradient( x0 + 1, y0 + 1, x1-1, y1-1, Btnlighthover, Btndarkhover )"
			
				1="fill( x0    , y0    , x1, y0 + 1, BtnBorder3 )"	//t
				2="fill( x0    , y0 + 1, x0 + 1, y1, BtnBorder3 )"	//l
				3="fill( x0 + 1, y1 - 1, x1, y1    , BtnBorder3b )"	//b
				4="fill( x1 - 1, y0 + 1, x1    , y1, BtnBorder3b )"	//r
			}			
		}
		
		ActionButtonStyle:active
		{
			textcolor="textpressed"
			render_bg
			{     
				0="gradient(x0+1, y0+1, x1-1, y1-1, Btndark, Btndarker )"
                
				1="fill(	x0  , y0  , x1  , y0+1, BtnBorder4 )"	//t
				3="fill(	x0  , y0+1, x0+1, y1  , BtnBorder4 )"	//l
				2="fill(	x0+1, y1-1, x1  , y1  , BtnBorder5 )"	//b
				4="fill(	x1-1, y0+1, x1  , y1  , BtnBorder5 )"	//r
			}
		}
	}

	layout
	{
		region { name=bodyregion x=10 y=10 width=max height=max overflow=scroll-vertical }		
		region { name=headerregion x=4 y=4 width=max height=max overflow=scroll-vertical }
		region { name=leftcolumn x=10 width=108 overflow=scroll-vertical }
		region { name=midcolumn x=118 width=max overflow=scroll-vertical }
		region { name=trackcolumn width=max overflow=scroll-vertical }
		
		place { region=headerregion control=AlbumTitleLabel }
		place { region=headerregion control=ArtistLabel,leftcolumn start="AlbumTitleLabel" dir=down }

		place { control="PlayTracksButton" height=20 }
		place { region=leftcolumn	dir=down start=ArtistLabel 
			control=PlayTracksButton,PlayTracksNextButton,AddTracksToQueueButton,PlayAlbumButton,PlayAlbumNextButton,AddAlbumToQueueButton,ShowAlbumButton,ShowAlbumInSystemButton }
		

		place { region=midcolumn start="ArtistLabel" dir=down width=200 height=200
			control="CoverImage" }
		
		place { region=trackcolumn control=*MusicPageDetailsTrack dir=down start=ArtistLabel x=343 }
	}
}